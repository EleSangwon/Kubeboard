<%- include("partials/header"); -%>
    <link rel="stylesheet" href="css/sidebar.css">
    </head>

    <body id="bootstrap-overrides">
        <main role="main">
            <div class="wrapper d-flex align-items-stretch">
                <%- include("partials/sidebar"); -%>
                    <!-- Page Content  -->
                    <div id="content" class="p-4 p-md-5 pt-5">
                        <div class="container-fluid">
                            <div class = "table-responsive">
                                <table class="table w-auto center-block">
                                    <thead>
                                      <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">namespace</th>
                                        <th scope="col">name</th>
                                        <th scope="col">image</th>
                                        <th scope="col">IP</th>
                                        <th scope="col">NodeIP</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <% for (var i = 0; i < pod.length; i++) { %>
                                      <tr>
                                        <th scope="row" class="col-1"><%= i + 1 %></th>
                                        <td><%= pod[i].NAMESPACE %></td>
                                        <td><%= pod[i].POD_NAME %></td>
                                        <td><%= pod[i].POD_IMAGE %></td>
                                        <td><%= pod[i].POD_IP %></td> <!--for문으로 pod 갯수 만큼 나오게 하기-->
                                        <td><%= pod[i].NODE_IP %></td> <!--for문으로 pod 갯수 만큼 나오게 하기-->
                                      </tr>
                                      <% } %>
                                    </tbody>
                                  </table>
                            </div>
                        </div>
                    </div>
            </div>
        </main>
    </body>
</html>